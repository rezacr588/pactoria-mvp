# =============================================================================
# PACTORIA MVP FRONTEND - DEVELOPMENT ENVIRONMENT VARIABLES
# =============================================================================
# This file contains example configuration for local development
# Copy to .env.local for your local development environment
# All variables MUST be prefixed with VITE_ to be accessible in the browser
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Local backend API URL
VITE_API_URL=http://localhost:8000/api/v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=Pactoria
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable major features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_TEMPLATES=true

# Debug features (enabled for development)
VITE_ENABLE_DEBUG=true
VITE_DEBUG_API_CALLS=false
VITE_DEBUG_ERRORS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Pagination and display settings
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Polling and refresh intervals (in milliseconds) - shorter for development
VITE_POLLING_INTERVAL=10000
VITE_CACHE_DURATION=60000

# =============================================================================
# ERROR HANDLING
# =============================================================================
# Retry configuration for failed requests
VITE_ERROR_RETRY_ATTEMPTS=3
VITE_ERROR_RETRY_DELAY=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Local storage key for authentication token
VITE_TOKEN_STORAGE_KEY=auth-token

# HTTPS not required for local development
VITE_ENABLE_HTTPS_ONLY=false

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
# Hot module replacement and dev server settings
VITE_HMR_PORT=5173
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=5173

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Source maps enabled for development debugging
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false

# =============================================================================
# ENVIRONMENT VALIDATION
# =============================================================================
VITE_CONFIG_VERSION=1.0.0
VITE_DEPLOYMENT_TARGET=development