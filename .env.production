# Production Environment Variables for Azure Deployment
# Replace these values with your actual secrets before deployment

# REQUIRED: Generate a strong secret key for JWT tokens
JWT_SECRET_KEY="your-strong-secret-key-here-generate-a-new-one"

# REQUIRED: Your Groq API key from https://console.groq.com
GROQ_API_KEY="your-groq-api-key-here"

# Application Configuration
APP_NAME="Pactoria Contract Management"
APP_VERSION="0.1.0-mvp"
DEBUG=false
ENVIRONMENT="production"

# API Configuration
API_V1_PREFIX="/api/v1"
PORT=8000
BIND_HOST="0.0.0.0"

# Database Configuration (SQLite for free tier)
DATABASE_URL="sqlite:///app/data/pactoria_mvp.db"

# AI/Groq Configuration
GROQ_MODEL="llama-3.1-8b-instant"

# Security Configuration
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=".pdf,.docx,.txt"
UPLOAD_DIR="/tmp/uploads"

# Performance Optimization for free tier
GUNICORN_WORKERS=1
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Logging Configuration
LOG_LEVEL="INFO"
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Feature Flags for free tier optimization
ENABLE_DETAILED_LOGGING=false
ENABLE_METRICS_COLLECTION=false
ENABLE_REDIS_CACHING=false