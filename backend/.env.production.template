# =============================================================================
# PACTORIA MVP - PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# Azure Deployment Ready Configuration
# =============================================================================
# IMPORTANT: Replace all placeholder values before deploying to production
# Copy this file to .env and set your actual values
# Never commit actual secrets to version control
# =============================================================================

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED - CHANGE IMMEDIATELY)
# =============================================================================
# Generate strong random keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="CHANGE_ME_GENERATE_STRONG_SECRET_KEY_32_CHARS_MIN"
JWT_SECRET_KEY="CHANGE_ME_GENERATE_STRONG_JWT_SECRET_KEY_32_CHARS_MIN"

# Get your Groq API key from: https://console.groq.com/keys
GROQ_API_KEY="your-groq-api-key-here"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Pactoria Contract Management"
APP_VERSION="0.1.0-mvp"
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_PREFIX=/api/v1
PORT=8000
BIND_HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Choose ONE of the following database options:

# Option 1: SQLite (Free tier, local storage)
DATABASE_URL=sqlite:///./pactoria_mvp.db

# Option 2: Azure PostgreSQL Flexible Server (Recommended for production)
# DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require
# AZURE_POSTGRESQL_HOST=your-postgres-server.postgres.database.azure.com
# AZURE_POSTGRESQL_DATABASE=pactoria_mvp
# AZURE_POSTGRESQL_USER=pactoria_admin
# AZURE_POSTGRESQL_PASSWORD=your-strong-password
# AZURE_POSTGRESQL_CONNECTION_STRING=postgresql://username:password@hostname:5432/database?sslmode=require

# Option 3: Azure SQL Database
# DATABASE_URL=mssql+pyodbc://username:password@hostname:1433/database?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no

# =============================================================================
# GROQ AI CONFIGURATION
# =============================================================================
# Available models: llama-3.1-8b-instant, llama-3.1-70b-versatile, mixtral-8x7b-32768
GROQ_MODEL=llama-3.1-8b-instant

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Azure Static Web Apps URLs - will be set automatically if WEBSITE_HOSTNAME is available
# Format: comma-separated list of origins
# CORS_ORIGINS=https://your-app.azurestaticapps.net,https://your-custom-domain.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.pdf,.docx,.txt
UPLOAD_DIR=/tmp/uploads

# =============================================================================
# AZURE STORAGE CONFIGURATION (Optional - for persistent file storage)
# =============================================================================
# AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=pactoria-uploads

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# CONTRACT SETTINGS (MVP Requirements)
# =============================================================================
MAX_USERS_PER_ACCOUNT=5
CONTRACT_HISTORY_MONTHS=3
MIN_COMPLIANCE_SCORE=0.95

# =============================================================================
# UK LEGAL TEMPLATES CONFIGURATION
# =============================================================================
TEMPLATE_CATEGORIES=service_agreements,employment_contracts,supplier_agreements,ndas,terms_conditions

# =============================================================================
# FEATURE FLAGS FOR OPTIMIZATION
# =============================================================================
# Set to false for cost optimization on free/low-tier services
ENABLE_DETAILED_LOGGING=false
ENABLE_METRICS_COLLECTION=false
ENABLE_REDIS_CACHING=false

# =============================================================================
# AZURE APP SERVICE SPECIFIC (Auto-detected)
# =============================================================================
# These are automatically set by Azure App Service - do not set manually
# WEBSITE_HOSTNAME - Auto-set by Azure App Service
# AZURE_FUNCTIONS_ENVIRONMENT - Auto-set by Azure Functions

# =============================================================================
# GUNICORN OPTIMIZATION (For Azure Container Apps/App Service)
# =============================================================================
GUNICORN_WORKERS=1
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
ENABLE_KEEPALIVE=true
KEEPALIVE_INTERVAL=240

# =============================================================================
# DEVELOPMENT OVERRIDES (Only for local testing)
# =============================================================================
# Uncomment for local development testing:
# DEBUG=true
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173