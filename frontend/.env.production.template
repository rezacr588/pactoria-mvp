# =============================================================================
# PACTORIA MVP FRONTEND - PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# Azure Static Web Apps Deployment Ready Configuration
# =============================================================================
# IMPORTANT: Replace all placeholder values before deploying to production
# Copy this file to .env.production and set your actual values
# All variables MUST be prefixed with VITE_ to be accessible in the browser
# =============================================================================

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================
# Your backend API URL - replace with your actual Azure Container App URL
VITE_API_URL=https://your-backend-app.azurecontainerapps.io/api/v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=Pactoria
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable major features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_TEMPLATES=true

# Debug features (should be false in production)
VITE_ENABLE_DEBUG=false
VITE_DEBUG_API_CALLS=false
VITE_DEBUG_ERRORS=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Pagination and display settings
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Polling and refresh intervals (in milliseconds)
VITE_POLLING_INTERVAL=30000
VITE_CACHE_DURATION=300000

# =============================================================================
# ERROR HANDLING
# =============================================================================
# Retry configuration for failed requests
VITE_ERROR_RETRY_ATTEMPTS=3
VITE_ERROR_RETRY_DELAY=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Local storage key for authentication token
VITE_TOKEN_STORAGE_KEY=auth-token

# Force HTTPS in production
VITE_ENABLE_HTTPS_ONLY=true

# =============================================================================
# AZURE STATIC WEB APPS SPECIFIC
# =============================================================================
# These are automatically managed by Azure Static Web Apps
# VITE_AZURE_STATIC_WEB_APPS_API_URL - Auto-managed
# VITE_AZURE_CLIENT_ID - Auto-managed for authentication

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Application Insights (if using Azure Application Insights)
# VITE_APPINSIGHTS_CONNECTION_STRING=your-connection-string
# VITE_APPINSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key

# Google Analytics (if using)
# VITE_GA_MEASUREMENT_ID=GA-XXXXXXXXX

# =============================================================================
# CDN & ASSETS (Optional)
# =============================================================================
# Azure CDN endpoint for static assets (if using)
# VITE_CDN_URL=https://your-cdn-endpoint.azureedge.net

# =============================================================================
# DEVELOPMENT OVERRIDES (Only for local testing)
# =============================================================================
# Uncomment these lines for local development testing:
# VITE_NODE_ENV=development
# VITE_API_URL=http://localhost:8000/api/v1
# VITE_ENABLE_DEBUG=true
# VITE_DEBUG_API_CALLS=true
# VITE_DEBUG_ERRORS=true
# VITE_ENABLE_HTTPS_ONLY=false

# =============================================================================
# BUILD OPTIMIZATION FLAGS
# =============================================================================
# These affect the build process and are used by Vite config
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# =============================================================================
# ENVIRONMENT VALIDATION
# =============================================================================
# Used to validate that the environment is properly configured
VITE_CONFIG_VERSION=1.0.0
VITE_DEPLOYMENT_TARGET=azure-static-web-apps