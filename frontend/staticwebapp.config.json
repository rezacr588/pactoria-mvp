{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  
  "routes": [
    {
      "route": "/assets/*",
      "headers": {
        "Cache-Control": "max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.{js,css,woff,woff2}",
      "headers": {
        "Cache-Control": "max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.{png,jpg,jpeg,svg,ico}",
      "headers": {
        "Cache-Control": "max-age=86400, public"
      }
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200,
      "headers": {
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY"
      }
    }
  ],
  
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY"
  },
  
  "responseOverrides": {
    "404": {
      "statusCode": 200,
      "rewrite": "/index.html"
    }
  },
  
  "trailingSlash": "never"
}