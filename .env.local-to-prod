# Local-to-Production Environment Configuration
# This file allows you to run your local application against production resources
# ⚠️  WARNING: This connects to PRODUCTION data - use with extreme caution!

# Environment Mode
ENVIRONMENT=local-to-production
DEBUG=true  # Keep debug on for local development convenience
LOCAL_TO_PROD_MODE=true

# Production Database Connection
# Replace these with your actual Azure PostgreSQL credentials
DATABASE_URL=postgresql://pactoria_admin:YOUR_PRODUCTION_PASSWORD@pactoria-db.postgres.database.azure.com:5432/pactoria_mvp?sslmode=require
AZURE_POSTGRESQL_HOST=pactoria-db.postgres.database.azure.com
AZURE_POSTGRESQL_DATABASE=pactoria_mvp  
AZURE_POSTGRESQL_USER=pactoria_admin
AZURE_POSTGRESQL_PASSWORD=YOUR_PRODUCTION_PASSWORD

# Production Security Keys - MUST match production values
SECRET_KEY=your-production-secret-key-here
JWT_SECRET_KEY=your-production-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Production Groq API Key
GROQ_API_KEY=your-production-groq-api-key-here
GROQ_MODEL=llama-3.1-8b-instant

# CORS - Allow local development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# File Upload - Use production storage
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.pdf,.docx,.txt
UPLOAD_DIR=./uploads  # Local directory for temporary files

# Azure Storage (Production)
AZURE_STORAGE_ACCOUNT_NAME=your-production-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-production-storage-key
AZURE_STORAGE_CONTAINER_NAME=pactoria-uploads

# Local Server Settings
PORT=8000
BIND_HOST=0.0.0.0

# Enhanced Logging for Local-to-Prod Debugging
LOG_LEVEL=DEBUG
ENABLE_REQUEST_LOGGING=true
ENABLE_DETAILED_LOGGING=true

# Rate Limiting - Disabled for local testing
ENABLE_RATE_LIMITING=false
RATE_LIMIT_PER_MINUTE=1000

# Safety Features
ENABLE_PROD_CONNECTION_WARNINGS=true
ENABLE_DATA_BACKUP_PROMPTS=true
ENABLE_WRITE_CONFIRMATIONS=true

# Performance Settings (Optimized for local testing)
ENABLE_METRICS_COLLECTION=true
ENABLE_REDIS_CACHING=false
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30