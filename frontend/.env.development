# Development Environment Variables for Pactoria MVP
VITE_API_URL=http://localhost:8000/api/v1
VITE_ENVIRONMENT=development
VITE_APP_NAME=Pactoria MVP
VITE_APP_VERSION=1.0.0-dev

# Debug and Development
VITE_DEBUG_API_CALLS=true

# Error Handling
VITE_ERROR_RETRY_ATTEMPTS=3
VITE_ERROR_RETRY_DELAY=1000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_TEMPLATES=true

# Security
VITE_TOKEN_STORAGE_KEY=pactoria-dev-auth-token

# Performance
VITE_API_TIMEOUT=10000
VITE_WS_HEARTBEAT_INTERVAL=10000

# Development specific
VITE_MOCK_API=false
VITE_SKIP_AUTH=false