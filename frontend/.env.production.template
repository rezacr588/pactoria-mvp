# Production Environment Variables Template for Azure Static Web Apps
# Copy this file to .env.production and fill in the values

# API Configuration - Update with your actual backend URL
VITE_API_URL=https://pactoria-backend.azurecontainerapps.io/api/v1
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=Pactoria
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# Feature Flags (optimized for cost efficiency)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_TEMPLATES=true
VITE_ENABLE_DEBUG=false
VITE_DEBUG_API_CALLS=false
VITE_DEBUG_ERRORS=false

# Performance Configuration
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=50
VITE_POLLING_INTERVAL=60000
VITE_CACHE_DURATION=300000

# Error Handling
VITE_ERROR_RETRY_ATTEMPTS=3
VITE_ERROR_RETRY_DELAY=1000

# Security Configuration
VITE_TOKEN_STORAGE_KEY=pactoria-auth-token
VITE_ENABLE_HTTPS_ONLY=true

# Build Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# Deployment Configuration
VITE_CONFIG_VERSION=1.0.0
VITE_DEPLOYMENT_TARGET=azure-static-web-apps

# CDN and Caching (optimized for Azure Static Web Apps)
VITE_ENABLE_CDN_OPTIMIZATION=true
VITE_CACHE_STATIC_ASSETS=true