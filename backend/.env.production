# Production Environment Configuration - Ultra Low Cost Setup
APP_NAME="Pactoria Contract Management"
APP_VERSION="0.1.0-mvp"
DEBUG=false
ENVIRONMENT="production"

# API Configuration
API_V1_PREFIX="/api/v1"

# Database - SQLite with Azure Files persistence (cheapest option)
DATABASE_URL="sqlite:///./data/pactoria_mvp.db"

# Security - This will be overridden by Container Apps secrets
SECRET_KEY="change-this-in-container-apps-secrets"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# Groq API - This will be set as a secret in Container Apps
GROQ_API_KEY="set-this-as-container-apps-secret"
GROQ_MODEL="openai/gpt-oss-120b"

# CORS - Update with your Static Web App URL
CORS_ORIGINS=["https://your-static-app.azurestaticapps.net"]

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=[".pdf", ".docx", ".txt"]
UPLOAD_DIR="/app/uploads"

# Contract Settings (MVP Requirements)
MAX_USERS_PER_ACCOUNT=5
CONTRACT_HISTORY_MONTHS=3

# Compliance
MIN_COMPLIANCE_SCORE=0.95